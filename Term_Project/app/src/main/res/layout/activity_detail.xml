<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="#000000">

    <ImageView
        android:id="@+id/album_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mini5" />

    <TextView
        android:id="@+id/album_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Alive"
        android:textSize="50sp"
        android:textColor="#fff000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/album_image"
        app:layout_constraintTop_toBottomOf="@+id/album_image" />

    <TextView
        android:id="@+id/producer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="G-Dragon"
        android:textSize="20sp"
        android:textColor="#fff000"
        app:layout_constraintStart_toStartOf="@+id/album_text"
        app:layout_constraintTop_toBottomOf="@+id/album_text" />

    <TextView
        android:id="@+id/genre_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="댄스, 발라드"
        android:textSize="20sp"
        android:textColor="#fff000"
        app:layout_constraintStart_toStartOf="@+id/album_text"
        app:layout_constraintTop_toBottomOf="@+id/producer_text" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2012.02.29"
        android:textSize="20sp"
        android:textColor="#fff000"
        app:layout_constraintEnd_toEndOf="@+id/album_image"
        app:layout_constraintTop_toTopOf="@+id/genre_text" />
</androidx.constraintlayout.widget.ConstraintLayout>